<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ReceiptActivity">

    <include
        android:id="@+id/appBarMain"
        layout="@layout/user_appbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarMain"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receiptMovieTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="#052BFA"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/receiptMovieImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/image_border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receiptDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="Date : "
                    android:textColor="#052BFA"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receiptDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="49dp"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="#1E83D1"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receiptTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="Time : "
                    android:textColor="#052BFA"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receiptTimesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="45dp"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#1E83D1"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receiptLanguageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="Language : "
                    android:textColor="#052BFA"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receiptLanguageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="14dp"
                    android:text="Language"
                    android:textAlignment="center"
                    android:textColor="#1E83D1"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receiptTheaterNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="Theater : "
                    android:textColor="#052BFA"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receiptTheaterNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:text="Theater"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#1E83D1"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/receiptTheaterLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Theater Location : "
                android:textColor="#052BFA"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receiptTheaterLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:text="Theater Location"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#1E83D1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/receiptBookedSeatsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Booked Seats : "
                android:textColor="#052BFA"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receiptBookedSeatsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seats"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:textAlignment="center"
                android:textColor="#1E83D1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receiptPaymentDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Payment Details : "
                android:textColor="#052BFA"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/receiptView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/receiptPaymentMethodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4056D1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Method : "/>

                <TextView
                    android:id="@+id/receiptPaymentMethodTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E83D1"
                    android:text="gpay"
                    android:layout_marginLeft="30dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/receiptSeatCount"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/receiptSeatCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiptPaymentMethodLabel"
                    android:textColor="#4056D1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:text="Seats : "/>

                <TextView
                    android:id="@+id/receiptPriceSeatCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E83D1"
                    android:layout_marginLeft="30dp"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/receiptPaymentMethodLabel"
                    android:layout_toRightOf="@id/receiptSeatCount"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/receiptTaxesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4056D1"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:layout_below="@id/receiptSeatCount"
                    android:textStyle="bold"
                    android:text="Taxes : "/>

                <TextView
                    android:id="@+id/receiptTaxesCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E83D1"
                    android:layout_marginLeft="30dp"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/receiptPriceSeatCount"
                    android:layout_toRightOf="@id/receiptSeatCount"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/receiptTotalAmountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4056D1"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:layout_below="@id/receiptTaxesLabel"
                    android:textStyle="bold"
                    android:text="Total : "/>

                <TextView
                    android:id="@+id/receiptTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E83D1"
                    android:layout_marginLeft="30dp"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/receiptTaxesCharge"
                    android:layout_toRightOf="@id/receiptSeatCount"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/goBackToHomeBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/receiptTotalAmount"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#2A54EC"
                    android:text="Return to\n homepage"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>