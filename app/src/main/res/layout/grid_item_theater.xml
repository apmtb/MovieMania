<?xml version="1.0" encoding="utf-8"?>
<!-- grid_item_theater.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/theaterImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border"/>

    <TextView
        android:id="@+id/theaterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#1E83D1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/admin_actions_theater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="0dp"
            android:paddingTop="5dp"
            android:backgroundTint="#FF6961"
            android:paddingBottom="0dp"
            android:drawableTop="@drawable/ic_delete"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:textSize="0dp"
            android:backgroundTint="#FDFD96"
            android:drawableTop="@drawable/ic_edit"/>
    </LinearLayout>

</LinearLayout>