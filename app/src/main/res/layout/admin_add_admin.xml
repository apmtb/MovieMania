<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.bottom_fragment.AddAdminFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resetpassText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="New Admin"
            android:textColor="#052BFA"
            android:textSize="30dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/emailforgetpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resetpassText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textboxborder"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="20dp"
            android:hint="Email Id"
            android:padding="10dp"
            android:textColor="#052BFA"
            android:textColorHint="#4fa5d5"
            android:textSize="27dp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitemailforgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailforgetpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#2A54EC"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <FrameLayout
            android:id="@+id/frameLayoutFP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:clickable="true"
            android:visibility="gone">

            <VideoView
                android:id="@+id/videoViewLoadingCircleFP"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center" />
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>